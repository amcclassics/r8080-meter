{
  "id": null,
  "uid": "r8080-spl",
  "title": "REED R8080 Sound Level Meter",
  "tags": ["mute", "r8080", "noise"],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Live dB Level",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "influxdb", "uid": "INFLUXDB" },
      "targets": [
        {
          "query": "SELECT last(\"db\") FROM \"spl\" WHERE $timeFilter",
          "rawQuery": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dB",
          "min": 30,
          "max": 130,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 60, "color": "yellow" },
              { "value": 80, "color": "orange" },
              { "value": 100, "color": "red" }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Sound Level Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "datasource": { "type": "influxdb", "uid": "INFLUXDB" },
      "targets": [
        {
          "query": "SELECT mean(\"db\") FROM \"spl\" WHERE $timeFilter GROUP BY time($__interval) fill(null)",
          "rawQuery": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dB",
          "min": 30,
          "max": 130,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "thresholdsStyle": { "mode": "area" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 60, "color": "yellow" },
              { "value": 80, "color": "orange" },
              { "value": 100, "color": "red" }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Peak Level (1m windows)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "influxdb", "uid": "INFLUXDB" },
      "targets": [
        {
          "query": "SELECT max(\"db\") FROM \"spl\" WHERE $timeFilter GROUP BY time(1m) fill(null)",
          "rawQuery": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dB",
          "custom": { "lineWidth": 2, "fillOpacity": 10, "drawStyle": "bars" },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "Statistics",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "influxdb", "uid": "INFLUXDB" },
      "targets": [
        {
          "query": "SELECT mean(\"db\") AS \"avg\", max(\"db\") AS \"peak\", min(\"db\") AS \"min\" FROM \"spl\" WHERE $timeFilter",
          "rawQuery": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dB"
        },
        "overrides": []
      }
    }
  ]
}
